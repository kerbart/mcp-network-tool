{
  "info": {
    "name": "MCP Network Tools",
    "description": "Collection for testing MCP Network Tools server in HTTP transport mode",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Initialize MCP Server",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 1,\n  \"method\": \"initialize\",\n  \"params\": {\n    \"protocolVersion\": \"2024-11-05\",\n    \"capabilities\": {\n      \"tools\": {}\n    },\n    \"clientInfo\": {\n      \"name\": \"postman-test\",\n      \"version\": \"1.0.0\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Initialize the MCP server connection"
      }
    },
    {
      "name": "List Available Tools",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 2,\n  \"method\": \"tools/list\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "List all available network tools"
      }
    },
    {
      "name": "Ping Tool",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 3,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"ping\",\n    \"arguments\": {\n      \"host\": \"google.com\",\n      \"count\": 4,\n      \"timeout\": 5\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Test connectivity to a host using ping"
      }
    },
    {
      "name": "Traceroute Tool",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 4,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"traceroute\",\n    \"arguments\": {\n      \"host\": \"google.com\",\n      \"max_hops\": 15\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Trace network route to a destination host"
      }
    },
    {
      "name": "Whois Tool",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 5,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"whois\",\n    \"arguments\": {\n      \"target\": \"google.com\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Get whois information for a domain or IP"
      }
    },
    {
      "name": "DNS Lookup (nslookup)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 6,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"nslookup\",\n    \"arguments\": {\n      \"domain\": \"google.com\",\n      \"record_type\": \"A\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Perform DNS lookup for a domain"
      }
    },
    {
      "name": "DNS MX Records",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 7,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"nslookup\",\n    \"arguments\": {\n      \"domain\": \"google.com\",\n      \"record_type\": \"MX\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Get MX records for a domain"
      }
    },
    {
      "name": "Nmap Port Scan",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 8,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"nmap\",\n    \"arguments\": {\n      \"host\": \"scanme.nmap.org\",\n      \"ports\": \"22,80,443\",\n      \"scan_type\": \"connect\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Perform port scan on a host"
      }
    },
    {
      "name": "HTTP Request (curl)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 9,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"curl\",\n    \"arguments\": {\n      \"url\": \"https://httpbin.org/get\",\n      \"method\": \"GET\",\n      \"headers\": true,\n      \"follow_redirects\": true\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Make HTTP request with detailed information"
      }
    },
    {
      "name": "HTTP POST Request (curl)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 10,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"curl\",\n    \"arguments\": {\n      \"url\": \"https://httpbin.org/post\",\n      \"method\": \"POST\",\n      \"headers\": true,\n      \"follow_redirects\": true\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Make HTTP POST request"
      }
    },
    {
      "name": "Network Connections (netstat)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 11,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"netstat\",\n    \"arguments\": {\n      \"protocol\": \"tcp\",\n      \"state\": \"established\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Show active network connections"
      }
    },
    {
      "name": "Listening Ports (netstat)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 12,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"netstat\",\n    \"arguments\": {\n      \"protocol\": \"all\",\n      \"state\": \"listening\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": ["mcp", "v1"]
        },
        "description": "Show listening ports"
      }
    }
  ]
}